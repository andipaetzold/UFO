            <TabItem Header="Notification">
                <DockPanel Width="300">
                    <Button DockPanel.Dock="Top" Command="{Binding SendNotifactionCommand}"
                            CommandParameter="{Binding ElementName=NotificationArtists, Path=SelectedItems}">
                        Send notifications
